<div class="loading-container @(IsOverlay ? "loading-overlay" : "")">
    <div class="spinner-container">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        @if (!string.IsNullOrEmpty(Message))
        {
            <div class="spinner-message mt-2">@Message</div>
        }
    </div>
</div>

@code {
    [Parameter]
    public string? Message { get; set; }

    [Parameter]
    public bool IsOverlay { get; set; }
}

<style>
    .loading-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 200px;
    }

    .loading-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(255, 255, 255, 0.8);
        z-index: 1000;
    }

    .spinner-container {
        text-align: center;
    }

    .spinner-message {
        color: var(--primary-color);
        font-size: 1rem;
        margin-top: 0.5rem;
    }

    .spinner-border {
        width: 3rem;
        height: 3rem;
    }
</style>
